# Add these to your Laravel .env file

# Required: Your Logtailer source token
LOGTAILER_TOKEN=your-source-token-here

# Optional: Logtailer endpoint (defaults to localhost)
LOGTAILER_ENDPOINT=http://localhost:8080/logs

# Optional: Enable/disable Logtailer (useful for different environments)
LOGTAILER_ENABLED=true

# Optional: Minimum log level to send
LOGTAILER_LEVEL=debug

# Optional: Connection settings
LOGTAILER_CONNECTION_TIMEOUT=5000
LOGTAILER_TIMEOUT=5000

# Optional: Buffer settings
LOGTAILER_BUFFER_LIMIT=1000
LOGTAILER_FLUSH_INTERVAL=5000